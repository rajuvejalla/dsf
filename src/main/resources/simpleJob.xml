<?xml version="1.0" encoding="UTF-8"?>

<beans:beans
	xmlns="http://www.springframework.org/schema/batch"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.0.xsd">

	<beans:import resource="applicationContext.xml" />

	<job id="helloWorldJob" job-repository="jobRepository">
		<step id="step1">
			<tasklet ref="helloWorldTasklet" />
		</step>
	</job>

	<beans:bean name="helloWorldTasklet" class="br.com.wbotelhos.spring.batch.task.HelloWorldTasklet" />

	<!--
		Execute o seguinte comando na linha de comando para rodar o Job helloWorldJob.xml:
		mvn exec:java -Dexec.mainClass=org.springframework.batch.core.launch.support.CommandLineJobRunner -Dexec.args="simpleJob.xml helloWorldJob"
	-->

</beans:beans>